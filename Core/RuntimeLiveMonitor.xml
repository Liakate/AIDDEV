<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Frame name="AIDDEVRuntimeLiveMonitor" parent="UIParent" hidden="true" movable="true" enableMouse="true">
        <Size><AbsDimension x="300" y="200"/></Size>
        <Anchors><Anchor point="TOPRIGHT" x="-50" y="-50"/></Anchors>

        <Backdrop bgFile="Interface/Tooltips/UI-Tooltip-Background"
                  edgeFile="Interface/Tooltips/UI-Tooltip-Border"
                  tile="true">
            <EdgeSize><AbsValue val="12"/></EdgeSize>
            <TileSize><AbsValue val="12"/></TileSize>
        </Backdrop>

        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parentTitle" inherits="GameFontNormal">
                    <Anchors><Anchor point="TOPLEFT" x="10" y="-5"/></Anchors>
                    <Text>AIDDEV Live Runtime</Text>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <ScrollFrame name="$parentScroll" inherits="UIPanelScrollFrameTemplate">
                <Size><AbsDimension x="260" y="150"/></Size>
                <Anchors><Anchor point="TOPLEFT" x="10" y="-25"/></Anchors>
            </ScrollFrame>
        </Frames>

        <Scripts>
            <OnLoad>AIDDEV_RuntimeLiveMonitor_OnLoad(self)</OnLoad>
            <OnUpdate>AIDDEV_RuntimeLiveMonitor_OnUpdate(self, elapsed)</OnUpdate>
        </Scripts>
    </Frame>
</Ui>
